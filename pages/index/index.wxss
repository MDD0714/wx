/**index.wxss**/
.wrap {
  width: 100%;
}
.header {
  width: 100%;
  height: 150px;
  padding-top: 10px;
  box-sizing: border-box;
  background-color: #4747FF;
}
.header>.list {
  font-size: 14px;
  font-weight: 500;
  color: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.container {
  width: 95%;
  height: 120px;
  margin: 20px auto 0;
}
.container swiper {
  height: 120px;
  overflow: hidden;
  border-radius: 10px;
}
.container image {
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 10px;
}
.musicList {
  margin-top: 25px;
}
.musicList>text{
  display: block;
  font-size: 24px;
  padding: 8px 8px;
}
.musicList>navigator{
  display: block;
  width: 88%;
  height: 25px;
  line-height: 25px;
  background-color: #ccc;
  margin: 5px auto;
  padding: 10px;
}