/* pages/singerlist/singers.wxss */
.singerlist {
  width: 100%;
  padding: 5px 10px 0;
  box-sizing: border-box;
}
.item {
  height: 80px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 8px 0;
  background-color: #F7F7F7;
}
.item>image{
  display: block;
  width: 30%;
  height: 100%;
}
.item>text{
  width: 70%;
  height: 100%;
  line-height: 80px;
  text-align: center;
  font-size: 16px;
  display: block;
}